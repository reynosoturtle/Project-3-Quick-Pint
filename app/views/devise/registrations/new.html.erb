<div class="page-header-container">
  <header>sign up</header>
</div>


<div class="form-position">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


  <div class="field">
    <%= f.text_field :name, autofocus: true, placeholder: 'Name' %>
  </div>

  <div class="field">

    <%= f.label :type %>
    <br>
    <%= f.select :type, options_for_select(%w[Consumer Owner]) %>
    <%# options_for_select is a command that gives a drop down for cus and owners allows control which type %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email' %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password, 6 character minimum' %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirm password' %>
  </div>


  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
</div>
<%= render "devise/shared/links" %>
