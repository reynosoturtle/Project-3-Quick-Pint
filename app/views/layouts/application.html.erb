<!DOCTYPE html>
<html>
  <head>
    <title>Quickpint</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <h1><%= @page_title if @page_title.present? %></h1>
    <!-- Checks if on favorites page -->
    <% if request.env['PATH_INFO'] == "/favorites" %>
      <%= link_to 'Back', bars_path, class: 'btn btn-secondary' %>
    <% else %>
      <%= link_to 'My Favourites',favorites_path, class: 'btn btn-secondary' %>
    <% end %>

    <!-- Checks if user is a bar owner -->
    <% if user_signed_in? && current_user.type == 'Owner' %>
      <%= link_to 'New Bar', new_bar_path, class: 'btn btn-secondary'  %>
    <% end %>

    <!-- Normal User -->
    <% if user_signed_in? %>
      <%= link_to 'Log Out', destroy_user_session_url, method: :delete, class: 'btn btn-secondary'  %>
      <% else %>
      <%= link_to 'Log In', new_user_session_url, class: 'btn btn-secondary'  %>
    <% end %>
    <%= yield %>
  </body>
</html>
