<!DOCTYPE html>
<html>
  <head>
    <title>Quickpint</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <h1><%= @page_title if @page_title.present? %></h1>
    <!-- Checks if user is a bar owner -->
    <% if user_signed_in? && current_user.type == 'Owner' %>
      <%= link_to 'New Bar', new_bar_path %>
    <% end %>
    <!-- Normal User -->

    <% if user_signed_in? %>
      <%= link_to 'My Favourites',favorites_path %>
      <%= link_to 'Log Out', destroy_user_session_url, method: :delete %>
      <% else %>
      <%= link_to 'Log In', new_user_session_url %>
    <% end %>
    <%= yield %>
  </body>
</html>
