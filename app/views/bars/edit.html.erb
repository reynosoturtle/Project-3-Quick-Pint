<h1>Editing Bar</h1>

<%= form_with scope: :bar, model: @bar, local: true do |form| %>
  <p>
    <%= form.label :name, 'Bar Name' %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :'Business Hours' %><br>
    <%= form.time_field :opening_hour %>
    <%= form.time_field :closing_hour %>

  </p>

  <p>
 		<%= form.label :image, 'Bar Image' %><br>
		<%= form.file_field :image %>
  </p>

  <p>
  	 <%= form.label :address, 'Bar Address' %><br>
    <%= form.text_field :address %>
  </p>

	<p>
  	 <%= form.label :category, 'Category' %><br>
    <%= form.text_field :category %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
<%= link_to 'Back', bars_path, class: 'btn btn-primary' %> |
<%= link_to 'Destroy', bar_path(@bar),
        			method: :delete,
        			data: { confirm: 'Are you sure you want to delete this bar?' },
							class: 'btn btn-secondary' %>
