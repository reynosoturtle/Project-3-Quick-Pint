<p id="notice"><%= notice %></p>

<h1>Bars</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Business hours</th>
      <th>Images</th>
      <th>Phone Number</th>
      <th>Type</th>
      <th>Address</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bars.each do |bar| %>
      <tr>
        <td><%= bar.name %></td>
        <td><%= bar.hours %></td>
        <td><img src = '<%= bar.images %>'/></td>
				<td><%= bar.phone %></td>
				<td><%= bar.type_id.name %></td>
				<td><%= bar.address %></td>

        <td><%= link_to 'Show', bar_path(bar) %></td>
        <td><%= link_to 'Edit', edit_bar_path(bar) %></td>
        <td><%= link_to 'Destroy', bar_path(bar),
								method: :delete,
								data: { confirm: 'Are you sure?' } %>
				</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bar', new_bar_path %>
